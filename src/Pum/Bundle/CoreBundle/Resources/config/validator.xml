<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="validator.loader.pum" class="Pum\Core\Extension\Validation\Validation\Loader\PumLoader" public="false" />

        <service id="validator.beam_name_unique" class="Pum\Bundle\CoreBundle\Validator\Constraints\NoBeamWithSameNameValidator">
            <argument type="service" id="pum" />

            <tag name="validator.constraint_validator" alias="beam_name_unique" />
        </service>
    </services>
</container>
