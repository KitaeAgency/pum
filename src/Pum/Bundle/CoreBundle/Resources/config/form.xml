<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- SETTINGS -->

        <service id="form.type.pum_config" class="Pum\Bundle\CoreBundle\Form\Type\ConfigType">
            <argument type="service" id="pum.config" />
            <tag name="form.type" alias="pum_config" />
        </service>

        <service id="form.type_extension.woodwork_config" class="Pum\Bundle\WoodworkBundle\Form\TypeExtension\WoodworkConfigTypeExtension">
            <tag name="form.type_extension" alias="pum_config" />
        </service>

        <service id="form.type_extension.projectadmin_config" class="Pum\Bundle\ProjectAdminBundle\Form\TypeExtension\ProjectAdminConfigTypeExtension">
            <tag name="form.type_extension" alias="pum_config" />
        </service>

        <service id="form.type_extension.typeextra_config" class="Pum\Bundle\TypeExtraBundle\Form\TypeExtension\TypeExtraConfigTypeExtension">
            <tag name="form.type_extension" alias="pum_config" />
        </service>

        <!-- PUM OBJECT -->

        <service id="form.type.pum_object" class="Pum\Extension\Form\Form\Type\PumObjectType">
            <tag name="form.type" alias="pum_object" />
        </service>

        <service id="form.type.pum_filter" class="Pum\Extension\Form\Form\Type\PumFilterType">
            <argument type="service" id="pum" />
            <tag name="form.type" alias="pum_filter" />
        </service>

        <service id="form.type.pum_object_entity" class="Pum\Extension\Form\Form\Type\PumObjectEntityType">
            <argument type="service" id="em_factory" />
            <tag name="form.type" alias="pum_object_entity" />
        </service>

        <service id="form.type.pum_type_options" class="Pum\Extension\ProjectAdmin\Form\Type\PumTypeOptionsType">
            <argument type="service" id="pum" />
            <tag name="form.type" alias="pum_type_options" />
        </service>
    </services>
</container>
