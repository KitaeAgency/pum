<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- SETTINGS -->

        <service id="form.type.pum_config" class="Pum\Bundle\CoreBundle\Form\Type\ConfigType">
            <argument type="service" id="pum.config" />
            <tag name="form.type" alias="pum_config" />
        </service>

        <service id="form.type_extension.woodwork_config" class="Pum\Bundle\WoodworkBundle\Form\TypeExtension\WoodworkConfigTypeExtension">
            <tag name="form.type_extension" alias="pum_config" />
        </service>

        <!-- PUM OBJECT -->

        <service id="form.type.pum_object" class="Pum\Core\Extension\Form\Form\Type\PumObjectType">
            <tag name="form.type" alias="pum_object" />
        </service>

        <service id="form.type.pum_object_entity" class="Pum\Core\Extension\Form\Form\Type\PumObjectEntityType">
            <argument type="service" id="pum_core.extension.em_factory" />
            <tag name="form.type" alias="pum_object_entity" />
        </service>

        <service id="form.type.pum_type_options" class="Pum\Core\Extension\Form\Form\Type\PumTypeOptionsType">
            <argument type="service" id="pum" />

            <tag name="form.type" alias="pum_type_options" />
        </service>

        <service id="form.type_extension.block_prefixes" class="Pum\Core\Extension\Form\Form\TypeExtension\FormBlockPrefixTypeExtension">
            <tag name="form.type_extension" alias="form" />
        </service>
    </services>
</container>
