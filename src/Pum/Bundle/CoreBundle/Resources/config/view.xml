<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!-- TEMPLATE STORAGE -->

        <service id="pum.view_storage" alias="pum_core.view_storage" />

        <service id="pum_core.view_storage" class="Pum\Core\Extension\View\Storage\MysqlViewStorage" public="false">
            <argument type="service" id="doctrine.dbal.default_connection" />
        </service>

        <!-- TEMPLATE LOADER -->

        <service id="pum.view_storage.dbal" alias="pum_core.view_loader.dbal" />

        <service id="pum_core.view_loader.dbal" class="Pum\Core\Extension\View\Loader\PumMySqlLoader" public="false">
            <argument type="service" id="pum.view_storage" />

            <tag name="twig.loader" />
        </service>

        <!-- TWIG EXTENSION -->

        <service id="pum.view" alias="pum_core.view" />

        <service id="pum_core.view" class="Pum\Core\Extension\View\View" public="false">
            <argument type="service" id="pum" />
            <argument type="service" id="twig" />
        </service>

        <service id="twig.extension.pum_view" class="Pum\Core\Extension\View\Twig\PumViewExtension">
            <argument type="service" id="pum.view" />

            <tag name="twig.extension" />
        </service>

        <!-- VIEW FEATURE -->

        <service id="pum.view_feature.field" alias="pum_core.view_feature.field" />

        <service id="pum_core.view_feature.field" class="Pum\Core\Extension\View\FieldViewFeature" public="false">
            <argument type="service" id="service_container" />
            <argument type="service" id="pum.view_storage" />
        </service>

    </services>
</container>
