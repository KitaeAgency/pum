<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!-- SCHEMA MANAGER -->

        <service id="pum.view" alias="pum_core.view" />

        <service id="pum_core.view" class="Pum\Core\View\View" public="false">
            <argument type="service" id="twig" />
            <argument>%pum_core.view.resources%</argument>
        </service>

        <service id="twig.extension.pum_view" class="Pum\Core\View\Twig\PumViewExtension">
            <argument type="service" id="pum.view" />

            <tag name="twig.extension" />
        </service>

    </services>
</container>
