<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="pum_core.log" class="Pum\Core\Extension\Log\Service\LogService">
            <argument type="service" id="service_container" />
        </service>

        <service id="pum_core.log.doctrine_listener" class="Pum\Core\Extension\Log\Listener\DoctrineListener" public="false">
            <argument type="service" id="pum_core.log" />

            <tag name="doctrine.event_subscriber" />
        </service>

        <service id="pum_core.log.pum_listener" class="Pum\Core\Extension\Log\Listener\PumListener" public="false">
            <argument type="service" id="pum_core.em_factory" />
            <argument type="service" id="pum_core.log" />
            <argument type="service" id="doctrine.orm.entity_manager" />

            <tag name="pum.subscriber" />
        </service>
    </services>
</container>
