{# TEXT #}
{% block type_text_default %}
    {% if value is empty %}
        <span class="val-empty">vide</span>
    {% else %}
        {{ value }}
    {% endif %}
{% endblock %}

{# RELATION #}
{% block type_relation_default %}
    {% if value is iterable %}
        {% for sub in value %}
            {{ sub }}{% if not loop.last %},{% endif %}
        {% endfor %}
    {% else %}
        {{ value }}
    {% endif %}
{% endblock %}

{# DATE #}
{% block type_date_default %}
    {% if value is empty %}
        <span class="val-empty">vide</span>
    {% else %}
        {{ value|localizeddate("long", "none") }}
    {% endif %}
{% endblock %}

{# DATETIME #}
{% block type_datetime_default %}
    {% if value is empty %}
        <span class="val-empty">vide</span>
    {% else %}
        {{ value|localizeddate("long", "short") }}
    {% endif %}
{% endblock %}

{# BOOLEAN #}
{% block type_boolean_default %}
    {% if value is null %}
        <span class="val-empty">vide</span>
    {% elseif value %}
        <i class="text-center pum-scheme-colored-darkgrass pumicon pumicon-checkmark-2"></i>
    {% else %}
        <i class="text-center pum-scheme-colored-sanguine pumicon pumicon-close"></i>
    {% endif %}
{% endblock %}

{% block type_boolean_tableview %}
