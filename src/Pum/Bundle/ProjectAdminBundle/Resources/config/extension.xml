<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">


    <services>

        <!-- Pum Object Collection Manager -->

        <service id="pum.object.collection.manager" class="Pum\Bundle\ProjectAdminBundle\Extension\Object\CollectionManager">
            <argument type="service" id="pum.context" />
        </service>

        <!-- Pum Project Admin Widget -->

        <service id="pum.project.admin.widgets" class="Pum\Bundle\ProjectAdminBundle\Extension\Widget\WidgetContainer" />

        <service id="pum.project.admin.widgets.beam" class="Pum\Bundle\ProjectAdminBundle\Extension\Widget\Collection\Beam">
            <argument type="service" id="pum.context" />
            <tag name="pum.project.admin.widget" />
        </service>

        <service id="pum.project.admin.widgets.views" class="Pum\Bundle\ProjectAdminBundle\Extension\Widget\Single\Views">
            <argument type="service" id="security.context" />
            <tag name="pum.project.admin.widget" />
        </service>

        <service id="pum.project.admin.widgets.variables" class="Pum\Bundle\ProjectAdminBundle\Extension\Widget\Single\Variables">
            <tag name="pum.project.admin.widget" />
        </service>

    </services>
</container>
