<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="project.admin.search.api" class="Pum\Bundle\ProjectAdminBundle\Extension\Search\SearchApi">
            <argument type="service" id="project.admin.search" />
        </service>

        <service id="project.admin.search" class="Pum\Bundle\ProjectAdminBundle\Extension\Search\Search">
            <argument type="service" id="pum.context" />
            <argument>%kernel.cache_dir%/pum_schema</argument>
        </service>
    </services>
</container>
