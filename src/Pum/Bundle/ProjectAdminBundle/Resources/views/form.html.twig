{% block pa_tableview_columns_row %}
{% spaceless %}
    <table class="table">
        <thead>
            <tr>
                <th>Order</th>
                <th>Column label</th>
                <th>Show</th>
                <th>Associated field</th>
                <th>Associated view</th>
            </tr>
        </thead>
        <tbody>
            {% for child in form %}
                <tr>
                    <td class="col-lg-1">{{ form_widget(child.order) }}</td>
                    <td>{{ form_widget(child.label) }}</td>
                    <td class="col-lg-1">{{ form_widget(child.show) }}</td>
                    <td>{{ form_widget(child.field) }}</td>
                    <td>{{ form_widget(child.view) }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endspaceless %}
{% endblock %}

{% block _pa_tableview_default_sort_widget %}
    <table class="table">
        <thead>
            <tr>
                <th>Column</th>
                <th>Order</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ form_widget(form.default_sort_column) }}</td>
                <td>{{ form_widget(form.default_sort_order) }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}

{% block pa_tableview_filters_row %}
{% spaceless %}
    <table class="table">
        <thead>
            <tr>
                <th>Column</th>
                <th>Filter</th>
            </tr>
        </thead>
        <tbody>
            {% for child in form %}
                <tr>
                    <td>{{ form_widget(child.column) }}</td>
                    <td class="col-lg-3">{{ form_widget(child.filter) }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endspaceless %}
{% endblock %}

{% block pum_filter_default_widget %}
{% spaceless %}
    <div class="input-group input-inline">
        {{ form_widget(form.type)}}
        {{ form_widget(form.value)}}
    </div>
{% endspaceless %}
{% endblock %}
