{% extends "PumProjectAdminBundle::layout-beam.html.twig" %}

{% set menu_active = beam.name %}

{% block content %}
    <div class="pum-row-head">
        <div class="pum-action-bar pull-right">
            <a href="{{ path('pa_object_delete', {beamName: beam.name, name: object_definition.name, id: object.id}) }}" class="btn btn-danger">Delete</a>
        </div>
        {{ pum_macros.section_title('Edit ' ~ object_definition.name ~ ' #' ~ object.id, 'Edit <strong>' ~ object_definition.name|title ~' #' ~ object.id ~ '</strong>', null, [
            {
                href: path('pa_homepage'),
                text: pum_project().name
            },
            {
                href: path('pa_beam_show', {beamName: beam.name}),
                text: beam.name
            },
            {
                href: path('pa_object_list', {beamName: beam.name, name: object_definition.name}),
                text: object_definition.name
            },
            {
                text: 'Editing #' ~ object.id
            }
        ]) }}
    </div>
    {{ form(form) }}
{% endblock %}
