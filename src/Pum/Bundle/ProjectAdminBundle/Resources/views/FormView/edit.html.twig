{% extends "PumProjectAdminBundle::layout-beam.html.twig" %}

{% set menu_active = beam.name %}

{% block content %}
    <div class="pum-row-head">
        <div class="pum-action-bar pull-right">
            {% if object is not null %}
                <a href="{{ path('pa_object_edit', {beamName: beam.name, name: object_definition.name, id: object.id, view: form_view.name}) }}" class="btn btn-default">Back to edition</a>
            {% else %}
                <a href="{{ path('pa_object_create', {beamName: beam.name, name: object_definition.name, view: form_view.name}) }}" class="btn btn-default">Back to creation</a>
            {% endif %}
        </div>
        {{ pum_macros.section_title('Editing form view', 'Editing form view ' ~ form_view.name|pum_ucfirst ~ ' for <strong>' ~ object_definition.name|humanize|pum_ucfirst ~ '</strong>', null, [
            {
                href: path('pa_homepage'),
                text: pum_project().name|pum_ucfirst
            },
            {
                href: path('pa_beam_show', {beamName: beam.name}),
                text: beam.name|pum_ucfirst
            },
            {
                href: path('pa_object_list', {beamName: beam.name, name: object_definition.name}),
                text: object_definition.name|humanize|pum_ucfirst
            },
            {
                text: 'Edit form view : ' ~ form_view.name|pum_ucfirst
            }
        ]) }}
    </div>
    {{ pum_macros.alertMessages() }}
    <div class="col-lg-12 col-offset-auto">
        {{ form(form) }}
    </div>
{% endblock %}
