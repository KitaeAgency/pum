{% extends "PumAppBundle::base.html.twig" %}

{% set pum_color_scheme = 'darkgrass' %}

{% block javascript %}
    <script type="text/javascript">
        $(function () {
            $("#_username").focus();
        });
    </script>
{% endblock %}

{% block body %}
    <div class="pum-login">
        <div class="text-center">
            <img src="{{ asset('bundles/pumapp/img/pum-logo.svg') }}" alt="{{ "common.pum.name"|trans({}, 'pum') }}" width="100%" />
        </div>
        <hr />
        {% form_theme form 'PumAppBundle:Form:login.html.twig' %}
        {{ form(form, {action: path('app_security_loginCheck')}) }}

        <p class="text-center text-baseline text-muted">{{ "common.pum.poweredby"|trans({ '%name%': '<a class="pum-scheme-text_colored" href="' ~ "common.pum.website_url"|trans({}, 'pum') ~ '">' ~ "common.pum.name"|trans({}, 'pum') ~ '</a>' }, "pum")|raw }}</p>
    </div>
{% endblock %}
