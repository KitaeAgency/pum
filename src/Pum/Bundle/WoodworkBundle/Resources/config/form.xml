<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">


    <services>

        <service id="form.type.ww_project" class="Pum\Bundle\WoodworkBundle\Form\Type\ProjectType">
            <tag name="form.type" alias="ww_project" />
        </service>

        <service id="form.type.ww_beam" class="Pum\Bundle\WoodworkBundle\Form\Type\BeamType">
            <tag name="form.type" alias="ww_beam" />
        </service>

        <service id="form.type.ww_beam_entity" class="Pum\Bundle\WoodworkBundle\Form\Type\BeamEntityType">
            <argument type="service" id="pum" />

            <tag name="form.type" alias="ww_beam_entity" />
        </service>

        <service id="form.type.ww_object_definition" class="Pum\Bundle\WoodworkBundle\Form\Type\ObjectDefinitionType">
            <tag name="form.type" alias="ww_object_definition" />
        </service>

        <service id="form.type.ww_field_definition" class="Pum\Bundle\WoodworkBundle\Form\Type\FieldDefinitionType">
            <argument type="service" id="pum" />

            <tag name="form.type" alias="ww_field_definition" />
        </service>

        <service id="form.type.ww_field_type" class="Pum\Bundle\WoodworkBundle\Form\Type\FieldTypeType">
            <argument type="service" id="pum" />

            <tag name="form.type" alias="ww_field_type" />
        </service>

        <service id="form.type.ww_field_definition_collection" class="Pum\Bundle\WoodworkBundle\Form\Type\FieldDefinitionCollectionType">
            <tag name="form.type" alias="ww_field_definition_collection" />
        </service>

        <service id="form.type.ww_relation" class="Pum\Bundle\WoodworkBundle\Form\Type\RelationType">
            <tag name="form.type" alias="ww_relation" />
        </service>

        <!-- Core field types -->

        <service id="form.Type.ww_field_type_integer" class="Pum\Bundle\WoodworkBundle\Form\Type\FieldType\IntegerType">
            <tag name="form.type" alias="ww_field_type_integer" />
        </service>

        <service id="form.Type.ww_field_type_text" class="Pum\Bundle\WoodworkBundle\Form\Type\FieldType\TextType">
            <tag name="form.type" alias="ww_field_type_text" />
        </service>

        <service id="form.Type.ww_field_type_boolean" class="Pum\Bundle\WoodworkBundle\Form\Type\FieldType\BooleanType">
            <tag name="form.type" alias="ww_field_type_boolean" />
        </service>

        <service id="form.Type.ww_field_type_decimal" class="Pum\Bundle\WoodworkBundle\Form\Type\FieldType\DecimalType">
            <tag name="form.type" alias="ww_field_type_decimal" />
        </service>

        <service id="form.Type.ww_field_type_date" class="Pum\Bundle\WoodworkBundle\Form\Type\FieldType\DateType">
            <tag name="form.type" alias="ww_field_type_date" />
        </service>

        <service id="form.Type.ww_field_type_datetime" class="Pum\Bundle\WoodworkBundle\Form\Type\FieldType\DatetimeType">
            <tag name="form.type" alias="ww_field_type_datetime" />
        </service>

        <service id="form.Type.ww_field_type_choice" class="Pum\Bundle\WoodworkBundle\Form\Type\FieldType\ChoiceType">
            <tag name="form.type" alias="ww_field_type_choice" />
        </service>

    </services>
</container>
