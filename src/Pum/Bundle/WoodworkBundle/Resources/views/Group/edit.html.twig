{% extends "PumWoodworkBundle:User:layout.html.twig" %}

{% set sidebar_active = "group_list" %}

{% block content %}
    <div class="pum-row-head">
        {{ pum_macros.section_title('Groups', null, null, [
            {
                href: path('ww_homepage'),
                text: 'Woodwork'
            },
            {
                href: path('ww_group_list'),
                text: 'Groups'
            },
            {
                text: 'Editing the Group <strong>' ~ group.name|humanize|title ~ '</strong>'
            }
        ]) }}
    </div>
    <div class="row">
        <div class="col-lg-4 col-offset-auto">
            {{ form(form, {action: path('ww_group_edit', {id: group.id})}) }}
        </div>
    </div>
{% endblock %}
