{% extends "PumWoodworkBundle:User:layout.html.twig" %}

{% set sidebar_active = "group_list" %}

{% block content %}
    <div class="pum-row-head">
        <div class="pum-action-bar pull-right">
            <a href="{{ path('ww_group_create') }}" class="btn pum-scheme-btn-darkgrass"><i class="pumicon pumicon-plus2"></i>Create a Group</a>
        </div>
        {{ pum_macros.section_title('Groups', null, null, [
            {
                href: path('ww_homepage'),
                text: 'Woodwork'
            },
            {
                href: path('ww_group_list'),
                text: 'Groups'
            },
            {
                text: 'Manage application groups'
            }
        ]) }}
    </div>

    {{ pum_macros.alertMessages() }}

    <div class="row">
        <div class="col-lg-12 col-offset-auto">
            <table class="table table-bordered table-striped table-hover">
                <colgroup>
                    <col width="3%" />
                    <col width="3%" />
                </colgroup>
                <thead>
                    <tr>
                        <th class="text-center is_checkable"><input type="checkbox" name="all_groups" /></th>
                        <th class="text-right">#</th>
                        <th class="pum-schemed_cell">
                            <div class="pum-schemed_cell_wrapper">
                                Name
                             </div>
                        </th>
                        <th class="pum-schemed_cell">
                            <div class="pum-schemed_cell_wrapper">
                                <i class="pumicon pumicon-settings2 hidden-xs"></i>
                                Actions
                            </div>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {% for group in pager %}
                        <tr>
                            <td class="text-center is_checkable"><input type="checkbox" name="project[{{ group.id }}]" value="1" /></td>
                            <td class="text-right">{{ group.id }}</td>
                            <td>
                                {{ group.name }}
                            </td>
                            <td>
                                <a class="btn btn-sm pum-scheme-btn-darkgrass" href="{{ path('ww_group_edit', {id: group.id}) }}"><i class="icon-edit"></i> Edit</a>
                                <a class="btn btn-sm btn-danger" data-confirm="Delete" data-text="Delete Group" data-content="Are you sure you want to delete the group &quot;{{ group.name }}&quot; ?" href="{{ path('ww_group_delete', {id: group.id }) }}"><i class="icon-trash icon-white"></i> Delete</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            {# Pages #}
            {{ pum_macros.pager(pager) }}
        </div>
    </div>
{% endblock %}
