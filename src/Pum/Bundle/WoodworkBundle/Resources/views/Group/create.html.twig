{% extends "PumWoodworkBundle:User:layout.html.twig" %}

{% set sidebar_active = "group_create" %}

{% block content %}
    <div class="pum-row-head">
        {{ pum_macros.section_title('Groups', null, null, [
            {
                href: path('ww_homepage'),
                text: 'Woodwork'
            },
            {
                href: path('ww_group_list'),
                text: 'Groups'
            },
            {
                text: 'Create a Group'
            }
        ]) }}
    </div>

    {{ pum_macros.alertMessages() }}

    <div class="row">
        <div class="col-lg-4 col-offset-auto">
            {{ form(form, {action: path('ww_group_create')}) }}
        </div>
    </div>
{% endblock %}
