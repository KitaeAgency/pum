{% extends "PumWoodworkBundle::layout.html.twig" %}

{% set menu_active = "seo" %}

{% block content %}
    <div class="pum-row-head">
        {{ pum_macros.section_title('ww.routing.title'|trans({}, 'pum'), null, null, [
            {
                href: path('ww_homepage'),
                text: 'common.woodwork.breadcrumb'|trans({}, 'pum')
            },
            {
                href: path('ww_seo_schema_edit'),
                text: 'ww.routing.breadcrumb'|trans({}, 'pum')
            },
            {
                text: 'ww.routing.templates.description'|trans({}, 'pum')
            }
        ]) }}
    </div>


    <div class="row">
        <div class="col-sm-12 col-offset-auto">
            <ul class="nav nav-tabs pum-scheme-tabs">
                <li>
                    <a href="{{ path('ww_seo_schema_edit') }}" >
                        <i class="pumicon pumicon-menu }}"></i> &nbsp;{{ 'ww.routing.order.tab'|trans({}, 'pum') }}
                    </a>
                </li>
                <li class="active">
                    <a href="#ww_beam_edit_template" data-toggle="tab">
                        <i class="pumicon pumicon-file }}"></i> &nbsp;{{ 'ww.routing.templates.tab'|trans({}, 'pum') }}
                    </a>
                </li>
            </ul>

            <div class="tab-content">
                <div class="tab-pane active" id="ww_beam_edit_template">
                    <div class="row">
                        <div class="col-lg-12 col-offset-auto">
                            <fieldset>
                                {{ pum_macros.alertMessages() }}

                                {{form(form)}}
                            </fieldset>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
