{% set menu_active = menu_active|default('homepage') %}
<!DOCTYPE html>
<html>
    <head>
        <title>{% block title 'PUM - Woodwork' %}</title>
        {% stylesheets filter="cssrewrite" combine=true output="css/all.css"
            "vendor/bootstrap/css/bootstrap.css"
        %}
            <link rel="stylesheet" href="{{ asset(asset_url) }}" />
        {% endstylesheets %}
    </head>
    <body>
        <div class="container">
            <div class="navbar">
                <div class="navbar-inner">
                    <a class="brand" href="{{ path('ww_homepage') }}">Woodwork</a>
                    <ul class="nav">
                        <li{% if menu_active == 'beams' %} class="active"{% endif %}><a href="{{ path('ww_beam_list') }}">Beams</a></li>
                        <li{% if menu_active == 'projects' %} class="active"{% endif %}><a href="{{ path('ww_project_list') }}">Projects</a></li>
                        <li{% if menu_active == 'schema' %} class="active"{% endif %}><a href="{{ path('ww_schema') }}">Schema</a></li>
                    </ul>
                </div>
            </div>
            {% block content '' %}
            {% javascripts combine=true output="js/all.js"
                "vendor/jquery/jquery.1.10.2.js"
                "source/js/collection.js"
                "source/js/field-definition-types.js"
            %}
                <script type="text/javascript" src="{{ asset(asset_url) }}"></script>
            {% endjavascripts %}
            {% block javascript '' %}
        </div>
    </body>
</html>
