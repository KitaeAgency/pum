<?xml version="1.0" encoding="UTF-8"?>
<metadata>
    <schema>ADL SCORM</schema>
    <schemaversion>1.2</schemaversion>
    <adlcp:location>courseMetadata.xml</adlcp:location>
</metadata>
<resources>
    <resource identifier="{{ beams.main }}" type="json" main="true">
        <file href="{{ beams.main ~ '.json'}}"/>
    </resource>
    {% for beam in beams.related %}
        <resource identifier="{{ beam }}" type="json">
            <file href="{{ beam ~ '.json'}}"/>
        </resource>
    {% endfor %}
</resources>