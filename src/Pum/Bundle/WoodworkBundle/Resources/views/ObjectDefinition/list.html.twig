{% extends "PumWoodworkBundle::layout.html.twig" %}

{% set menu_active = "beams" %}

{% block content %}
    <ul class="breadcrumb">
        <li><a href="{{ path('ww_homepage') }}">Homepage</a><span class="divider">/</span></li>
        <li><a href="{{ path('ww_beam_list') }}">Beams</a> <span class="divider">/</span></li>
        <li class="active">{{ beam.name }}</li>
    </ul>
    <h2>
        Beam <em>{{ beam.name }}</em>
    </h2>

    <p>Later, a form here.</p>

    <h2>
        Objects
        <small class="btn-group pull-right">
            <a class="btn btn-success" href="{{ path('ww_object_definition_create', {beamName: beam.name}) }}"><i class="icon-plus icon-white"></i> New object</a>
        </small>
    </h2>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Object</th>
                <th>Fields</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for object in beam.objects %}
                <tr>
                    <td>
                        {{ object.name }}
                    </td>
                    <td>
                        {% for field in object.fields %}
                            {{ field.name }}<br />
                        {% endfor %}
                    </td>
                    <td>
                        <div class="btn-group">
                            <a class="btn" href="{{ path('ww_object_definition_edit', {beamName: beam.name, name: object.name}) }}"><i class="icon-eye-open"></i> View</a>
                            <a class="btn btn-danger" href="{{ path('ww_object_definition_delete', {beamName: beam.name, name: object.name}) }}"><i class="icon-trash icon-white"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr class="info">
                    <td colspan="3"><em>No object found. <a href="{{ path('ww_object_definition_create', {beamName: beam.name}) }}">Create a new object</a></td>
                </em>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
