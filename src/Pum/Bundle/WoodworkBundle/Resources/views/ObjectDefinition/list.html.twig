{% extends "PumWoodworkBundle::layout.html.twig" %}

{% block content %}
<h2>Object definition of Beam {{ beam.name }}</h2>
<p><a href="{{ path('ww_object_definition_create', {beamName: beam.name}) }}">Create a new object</a></p>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {% for object in definitions %}
            <tr>
                <td>{{ object.name }}</td>
                <td>
                    <a href="{{ path('ww_object_definition_view', {name: object.name, beamName: beam.name}) }}">View</a> /
                    <a href="{{ path('ww_object_definition_edit', {name: object.name, beamName: beam.name}) }}">Edit</a> /
                    <a href="{{ path('ww_object_definition_delete', {name: object.name, beamName: beam.name}) }}">Delete</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
