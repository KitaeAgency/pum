{% extends "PumWoodworkBundle::layout.html.twig" %}

{% block content %}
<h2>
   Beams  &raquo; {{ beam.name }}  &raquo; {{ objectName }} &raquo; fields
    <div class="btn-group pull-right">
        <a class="btn" href="{{ path('ww_object_definition_list', {beamName: beam.name}) }}"><i class="icon-chevron-left"></i>Back to definitions</a>
    </div>
</h2>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Type</th>
        </tr>
    </thead>
    <tbody>
        {% for field in definitions.fields %}
            <tr>
                <td>{{ field.name }}</td>
                <td>{{ field.type }}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
