{% extends "PumWoodworkBundle::layout.html.twig" %}

{% set menu_active = "beams" %}

{% block subsidebar %}
    {% include "PumWoodworkBundle::Beam/includes/sidebar.html.twig" %}
{% endblock %}

{% block content %}
    <div class="pum-row-head">
        <div class="pum-action-bar pull-right">
            <a href="{{ path('ww_beam_edit', {beamName: beam.name}) }}" class="btn btn-default">{{ 'ww.beams.object.edit.top_btn_back'|trans({}, 'pum') }}</a>
        </div>
        {{ pum_macros.section_title('ww.beams.object.edit.title'|trans({}, 'pum'), null, 'ww.beams.object.edit.subtitle'|trans({ '%name%':'<a href="' ~ path('ww_beam_edit', {beamName: beam.name}) ~ '">' ~ beam.name|pum_ucfirst ~ '</a>' }, 'pum'), [
            {
                href: path('ww_homepage'),
                text: 'common.woodwork.breadcrumb'|trans({}, 'pum')
            },
            {
                href: path('ww_beam_list'),
                text: 'ww.beams.breadcrumb'|trans({}, 'pum')
            },
            {
                href: path('ww_beam_edit', {beamName: beam.name}),
                text: beam.name|pum_ucfirst
            },
            {
                text: 'ww.beams.object.edit.description'|trans({ '%name%':'<strong>' ~ object.name ~ '</strong>' }, 'pum')
            }
        ]) }}
    </div>

    {{ pum_macros.alertMessages() }}

    <div class="row">
        <div class="col-sm-12 col-offset-auto">
            {{form(form)}}
        </div>
    </div>
{% endblock %}
