{% extends "PumWoodworkBundle:User:layout.html.twig" %}

{% set sidebar_active = "user_create" %}

{% block content %}
    <div class="pum-row-head">
        {{ pum_macros.section_title('ww.users.users.title'|trans({}, 'pum'), null, null, [
            {
                href: path('ww_homepage'),
                text: 'common.woodwork.breadcrumb'|trans({}, 'pum')
            },
            {
                href: path('ww_user_list'),
                text: 'ww.users.users.breadcrumb'|trans({}, 'pum')
            },
            {
                text: 'ww.users.users.create.breadcrumb'|trans({}, 'pum')
            }
        ]) }}
    </div>

    {{ pum_macros.alertMessages() }}

    <div class="row">
        <div class="col-lg-6 col-offset-auto">
            {{ form(form, {action: path('ww_user_create')}) }}
        </div>
    </div>
{% endblock %}
