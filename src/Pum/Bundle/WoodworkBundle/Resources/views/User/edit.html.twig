{% extends "PumWoodworkBundle:User:layout.html.twig" %}

{% set sidebar_active = "user_list" %}

{% block content %}
    <div class="pum-row-head">
        {{ pum_macros.section_title('ww.users.users.title'|trans({}, 'pum'), null, null, [
            {
                href: path('ww_homepage'),
                text: 'common.woodwork.breadcrumb'|trans({}, 'pum')
            },
            {
                href: path('ww_usergroup_list'),
                text: 'ww.users.usergroups.breadcrumb'|trans({}, 'pum')
            },
            {
                text: 'ww.users.users.edit.description'|trans({ '%name%':'<strong>' ~ user.fullname|pum_ucfirst ~ '</strong>' }, 'pum')
            }
        ]) }}
    </div>

    {{ pum_macros.alertMessages() }}

    <div class="row">
        <div class="col-lg-4 col-offset-auto">
            {{ form(form, {action: path('ww_user_edit', {id: user.id})}) }}
        </div>
    </div>
{% endblock %}
