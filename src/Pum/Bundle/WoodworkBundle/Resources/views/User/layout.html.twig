{% extends "PumWoodworkBundle::layout.html.twig" %}

{% set menu_active = "users" %}

{% block subsidebar %}
    <nav class="pum-subsidebar hidden-sm">
        <ul class="nav nav-pills nav-stacked">
            <li class="nav-header">
                User management
            </li>
            <li{% if sidebar_active == 'user_list' %} class="active"{% endif %}>
                <a href="{{ path('ww_user_list') }}">
                    {% if pager is defined %}
                        <span class="badge pull-right">{{ pager.count }}</span>
                    {% endif %}
                    List of users
                </a>
            </li>
            <li{% if sidebar_active == 'user_create' %} class="active"{% endif %}>
                <a href="{{ path('ww_user_create') }}">
                    Create a user
                </a>
            </li>
        </ul>
    </nav>
{% endblock %}
