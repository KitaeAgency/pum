<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="form.type.pum_coordinate" class="Pum\Bundle\TypeExtraBundle\Form\Type\CoordinateType">
            <tag name="form.type" alias="pum_coordinate" />
        </service>

        <service id="form.type.pum_price" class="Pum\Bundle\TypeExtraBundle\Form\Type\PriceType">
            <tag name="form.type" alias="pum_price" />
        </service>

        <service id="form.type.pum_media" class="Pum\Bundle\TypeExtraBundle\Form\Type\MediaType">
            <argument type="service" id="type_extra.media.storage.driver" />

            <tag name="form.type" alias="pum_media" />
        </service>

    </services>
</container>
