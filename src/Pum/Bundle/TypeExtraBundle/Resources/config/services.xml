<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!-- Media Factory -->
        <service id="type_extra.media.storage.driver" alias="type_extra.media.storage.driver.filesystem" />

        <service id="type_extra.media.storage.driver.filesystem" class="Pum\Bundle\TypeExtraBundle\Media\FilesystemStorage">
            <argument>%kernel.root_dir%/web/medias</argument>
            <argument>/medias/</argument>
        </service>

    </services>
</container>
