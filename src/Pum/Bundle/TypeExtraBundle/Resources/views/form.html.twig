{% extends "form_div_layout.html.twig" %}

{% block pum_price_widget %}
{% spaceless %}
    <div class="input-group input-group-select">
        {{ form_widget(form.value, {attr: {class: 'col-lg-2'}}) }}
        <div class="input-group-addon">
            {{ form_widget(form.currency, {attr: {class: 'col-lg-2'}}) }}
        </div>
    </div>
{% endspaceless %}
{% endblock %}

{% block pum_coordinate_widget %}
{% spaceless %}
    <div class="input-group input-inline" id="wrap_{{ form.vars.id }}">
        {{ form_widget(form.latitude, {attr:{'data-gmaps_target': 'latitude'}}) }}
        {{ form_widget(form.longitude, {attr:{'data-gmaps_target': 'longitude'}}) }}
        <span class="input-group-btn">
            <button class="btn btn-primary" type="button" data-toggle="collapse" data-parent="#wrap_{{ form.vars.id }}" href="#collapse_{{ form.vars.id }}">
                <i class="pumicon pumicon-search2"></i> Search on map
            </button>
        </span>
    </div>{{ help }}
    <div id="collapse_{{ form.vars.id }}" class="pum_gmaps_wrap panel-collapse collapse">
        <input type="text" class="form-control input-sm" data-gmaps_widget="true" placeholder="Type an address, city or location" />
        <div class="pum_gmaps"></div>
    </div>
{% endspaceless %}
{% endblock %}